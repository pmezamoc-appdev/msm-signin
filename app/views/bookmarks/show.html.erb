<div>
  <div>
    <h1>
      <%=@the_user.first_name%>'s Bookmarks
    </h1>


    <form action="/insert_bookmark" method="post">
 

        <label for="movie_id_box">
          Movie
        </label>

        <select id="movie_id_box" name="query_movie_id">
        <%Movie.all.each do |a_movie|%>
          <option value ="<%=a_movie.id%>">
                  <%=a_movie.title%>
          </option>
        <%end%>
        </select>

      <button>
        Bookmark this movie!
      </button>
    </form>
  </div>
</div>

   <hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Movie
        </th>

        <th>
          Created at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>
        <td>
          <%= a_bookmark.movie.title %>
        </td>

        <td>
          <%= a_bookmark.movie.created_at%>
        </td>

        <td>
          <a href="/delete_bookmark/<%= a_bookmark.id %>">
            Un-bookmark
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
